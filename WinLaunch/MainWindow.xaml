                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            FillBehavior="HoldEnd"
                                                            Storyboard.TargetName="scbBackground"
                                                            Storyboard.TargetProperty="Color"
                                                            To="#22000000"
                                                            Duration="0:0:0.1" />
